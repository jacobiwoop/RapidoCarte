{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs", // ts-node handles this better usually, or we can use nodemon with esm
    "lib": ["es2020"], 
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
